.content {
  width: 750rpx;
}

.tab {
  width: 100%;
  height: 92rpx;
  display: flex;
}

.tab view {
  flex: 1;
  color: #43240c;
  font-size: 28rpx;
  height: 92rpx;
  line-height: 92rpx;
  text-align: center;
}

.goods {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.goods-content {
  width: 369rpx;
  height: 554rpx;
  overflow: hidden;
}

.goods-content image {
  width: 100%;
  height: 369rpx;
  overflow: hidden;
}

.msg {
  width: 328rpx;
  height: 130rpx;
  padding: 0rpx 20rpx 18rpx;
  overflow: hidden;
}

.msg-title {
  width: 100%;
  height: 26rpx;
  font-size: 24rpx;
  color: #877a73;
  line-height: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.msg-keyword {
  width: 100%;
  height: 28rpx;
  margin-top: 10rpx;
}

.keyword {
  float: left;
  font-size: 12rpx
}

.tmall {
  height: 26rpx;
  line-height: 26rpx;
  background-color: #df2b2f;
  padding: 2rpx 4rpx;
  margin-right: 12rpx;
  color: #fff;
}

.other {
  color: #ff9900;
  border: 1rpx solid #ff9900;
  padding: 2rpx 4rpx;
  margin-right: 12rpx;
  height: 24rpx;
  line-height: 24rpx;
}

.free-postage {
  float: right;
  color: #877a73;
  height: 26rpx;
  line-height: 26rpx;
}

.msg-foot {
  width: 100%;
  height: 48rpx;
  margin-top: 8rpx;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
}

.price {
  width: auto;
  color: #fa585a;
  float: left;
  display: flex;
  height: 40rpx;
}

.price-tag .price-digit {
  font-size: 24rpx;
  height: 24rpx;
  line-height: 24rpx;
}

.price-strong {
  height: 40rpx;
  font-size: 40rpx;
  margin-top: -10rpx;
}

.sale-num {
  float: left;
  height: 34rpx;
  font-size: 24rpx;
  color: #877a73;
  margin-top: 12rpx;
}

.coupon-value {
  width: auto;
  float: right;
  font-size: 24rpx;
  height: 24rpx;
  line-height: 24rpx;
  color: #fa585a;
  border: 1rpx solid #fa585a;
  padding: 2rpx 6rpx 0;
  margin-top: 12rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
}
