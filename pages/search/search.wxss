/* pages/sousuo/sousuo.wxss */
@import '/icon/iconfont/iconfont.wxss';

.search-bar {
  display: flex;
  align-items: center;
  width: 100%;
  height: 100rpx;
  background-color: #fdde4a; 
}

.back-button {
  width: 60rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  margin-left: 40rpx;
}

.search-input {
  display: flex;
  align-items: center;
  width: 490rpx;
  height: 60rpx;
  padding: 0 18rpx;
  margin: 0 20rpx;
  background-color: #fff;
}

.search-input .icon-sousuo {
  color: #999;
}

.search-input input {
  flex: 1;
  padding-left: 10rpx; 
  color: #999;
  font-size: 26rpx;
}

.hot-word {
  width: 750rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.hot-word-title {
  width: 100%;
  height: 40rpx;
  font-size: 30rpx;
  color: #877a73;
  margin: 40rpx 0 30rpx 0;
}

.hot-word-word {
  display: flex;
  width: 670rpx;
  flex-wrap: wrap;
}

.hot-word-word view {
  font-size: 30rpx;
  padding: 6rpx 20rpx;
  margin: 0 20rpx 30rpx 0;
  background-color: #f5f5f5;
  border-radius: 15rpx; 
}

.hot-word-word .highlight {
  color: #fa585a;
}

.hot-word-word .goods-type {
  font-size: 30rpx;
  width: 25%;
  height: 42rpx;
  line-height: 42rpx;
  text-align: center;
  padding: 0 0rpx;
  margin: 0 0rpx 40rpx 0;
  background-color: #fff;
  border-radius: 15rpx; 
}