/* pages/detail/detail.wxss */
swiper {
  width: 750rpx;
  height: 750rpx !important;
}

swiper-item {
  height: 750rpx;
}

swiper-item image {
  width: 750rpx;
  height: 750rpx;
}

.cmd-info {
  box-sizing: border-box;
  padding: 20rpx 24rpx;
}

.cmd-info .title {
  width: 100%;
  height: 96rpx;
  font-size: 28rpx;
  color: #43240c;
  /* font-size: 30rpx;
  color: #43240c; */
}

.tao, .postage {
  display: inline-block;
  height: 34rpx;
  font-size: 28rpx;
}

.tao {
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  color: #fff;
  font-weight: 700;
  background-color: rgb(238, 57, 12);
}

.postage {
  line-height: 36rpx;
  padding: 0 10rpx;
  border: 1rpx solid #aaa;
  margin-left: 10rpx;
  color: #ccc;
  font-weight: normal;
}

.price-row {
  width: 100%;
  height: 60rpx;
}

.price-row view {
  display: inline-block;
}

.coupon {
  height: 34rpx;
  line-height: 36rpx;
  padding: 0 10rpx;
  border-radius: 10rpx;
  border: 1px solid #e73d09;
  font-size: 24rpx;
  color: #e73d09;
  margin-right: 10rpx;
}

.price-icon {
  font-size: 18rpx;
  color: #e73d09;
}

.price-strong {
  font-size: 36rpx;
  color: #e73d09;
}

.price-little {
  font-size: 28rpx;
  color: #e73d09;
}

.price-info {
  width: 100%;
  height: 34rpx;
  color: #b1a9a5;
  font-size: 24rpx;
}

.price-info view {
  display: inline-block;
}

.price-left {
  float: left;
}

.price-right {
  float: right;
}

.del {
  text-decoration: line-through;
  margin-left: 10rpx;
}

.type-num {
  width: 100%;
  height: 180rpx;
  border-top: 1rpx solid rgb(238, 185, 10);
  border-bottom: 1rpx solid rgb(238, 185, 10);
}

.type-type, .num-num {
  width: 100%;
}

.type-type {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
}

.type-type view {
  width: 20%;
  height: 42rpx;
  text-align: center;
  border: 1px solid #f5f5f5;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  font-size: 26rpx;
  color: #555;
  line-height: 44rpx;
  margin: 15rpx 0; 
}

.type-type .type-highLight {
  border: 1px solid #ff0036;
  background-color: #fff5f7;
  color: #ff0036;
}

.num-num {
  box-sizing: border-box;
  padding: 0 30rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.num-left {
  color: #666;
  font-size: 26rpx;
  height: 30rpx;
  line-height: 30rpx;
}

.num-right {
  display: flex;
  height: 90rpx;
  align-items: center;
}

.num-right input {
  width: 60rpx;
  height: 68rpx;
  background-color: #f5f5f5;
  color: #666;
  font-size: 24rpx;
  text-align: center;
  border: 1px solid #f5f5f5;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 10rpx;
}

.num-right view {
  width: 60rpx;
  height: 68rpx;
  background-color: #f5f5f5;
  color: #666;
  font-size: 48rpx;
  text-align: center;
  border: 1px solid #f5f5f5;
  line-height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.num-right .no-click {
  color: #cfcfcf;
}

.tb-border {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tb-border .line {
  background-color: #b1a9a5;
  width: 10%;
  height: 1px;
  display: inline-block;
}

.tb-border .title {
  display: inline-block;
  margin: 0 15rpx;
  color: #b1a9a5;
  font-size: 24rpx;
}

.detail-img {
  width: 750rpx;
}

.detail-img image {
  width: 750rpx;
  height: 750rpx;
}

.foot-btn {
  width: 100%;
  height: 96rpx;
  display: flex;
  position: fixed;
  bottom: 0;
}

.add-btn, .buy-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 30rpx;
  height: 96rpx;
  flex: 1;
}

.add-btn {
  background-color: #ff9500;
}

.buy-btn {
  background-color: #ff0036;
}