<view class="search">
  <view class="search-button" bindtap="toSearch">
    <text class="search-icon iconfont icon-sousuo"></text>
    <text class="search-prompt">搜索商品，发现更多优选</text>
  </view>
</view>
<view class="home-nav">
  <view class="nav-today">今日推荐</view>
  <view class="nav-line"></view>
  <scroll-view
    indicator-dots="{{indicatorDots}}"
    autoplay="{{false}}"
  >
    <view class="scroll-content" wx:for="{{noTodayNavList}}" wx:key="{{item.name}}">
      <view class="scroll-item">{{item.name}}</view>
    </view>
  </scroll-view>
  <view class="nav-icon"></view>
</view>