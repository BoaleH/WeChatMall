page {
  background-color: #f5f5f5;
}

.cart {
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
  /* background-color: #fff; */
  overflow: hidden;
  padding-bottom: 100rpx; 
}

.content {
  width: 100%;
  margin: 15rpx 0;
}

.header {
  display: flex;
  align-items: center;
  width: 100%;
  height: 120rpx;
  background-color: #fff;
  border-bottom: 2rpx solid #f5f5f5; 
}

.header checkbox {
  margin-left: 40rpx;
}

.header image {
  width: 100rpx;
  height: 100rpx;
  /* background-color: blue; */
  margin: 0 40rpx 0 30rpx;
}

.title {
  font-size: 28rpx;
  color: #666;
  height: 100rpx;
  flex: 1;
  padding-right: 20rpx;
  overflow: hidden;
}

.type {
  width: 100%;
  height: 70rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  background-color: #fff;
  /* border-top: 1px solid #999; */
}

.check-box {
  width: 70rpx;
  height: 70rpx;
  /* background-color: rebeccapurple; */
  margin: 0 70rpx 0 30rpx;
  /* display: flex; */
  /* justify-content: center; */
  /* align-items: center; */
}

.check-box checkbox {
  /* border-radius: 50%; */
  margin: 10rpx 0 0 10rpx;
  width: 40rpx !important;
  height: 40rpx !important; 
}

.type-right {
  float: right;
  flex: 1;
  padding-right: 20rpx;
  height: 70rpx;
}

.type-title, .type-price {
  float: left;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 26rpx;
  color: #666;
}

.type-price {
  margin-left: 20rpx;
}

.num {
  float: right;
  height: 70rpx;
  line-height: 70rpx;
  display: flex;
  align-items: center;
}

.num-less, input, .num-add {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f5f5f5;
  color: #666;
  margin: 0 5rpx;
}

input {
  width: 70rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 24rpx;
  color: #666;
}

.checkout {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  background-color: #fff;
}

.checkout checkbox {
  margin-left: 10rpx; 
}

.checkout view {
  height: 100rpx;
  line-height: 100rpx;
  color: #fff;
}

.checkout-del {
  background-color: rgb(238, 158, 11);
  padding: 0 20rpx;
}

.checkout-clear {
  background-color: rgb(243, 79, 3);
  padding: 0 20rpx;
}

.checkout-checkout {
  background-color: rgb(235, 23, 23);
  flex: 1;
  text-align: center;
}